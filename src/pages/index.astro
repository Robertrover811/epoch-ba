---
import Bridge from "../components/Bridge.astro";
import Glow from "../components/Glow.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Epoch Bay Area</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@700&family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-black text-white">
    <div class="relative min-h-screen overflow-x-hidden font-mono">
      <div class="py-16 px-8">
        <div class="absolute left-0 right-0 bottom-0 -z-10"><Bridge /></div>
        <div class="flex flex-col items-center lg:w-fit lg:pl-12">
          <div>
            <div class="flex h-4 justify-between">
              <div class="h-full w-7 border-t border-l border-white"></div>
              <div class="h-full w-7 border-t border-r border-white"></div>
            </div>
            <h1 class="flex w-fit flex-col items-end pl-14 pr-16 uppercase">
              <Glow as="div" class="font-fira text-8xl sm:text-9xl font-bold"
                >Ep0ch</Glow
              >
              <div
                class="-mt-12 translate-y-9 text-2xl font-semibold text-epoch-lighter sm:text-4xl"
              >
                Bay Area
              </div>
            </h1>
            <div class="flex h-4 justify-between">
              <div class="h-full w-7 border-b border-l border-white"></div>
              <div class="h-full w-7 border-b border-r border-white"></div>
            </div>
          </div>
          <div
            class="mt-20 flex flex-col space-x-2 text-center text-xl font-semibold sm:flex-row"
          >
            <span>December 30th</span>
            <span class="hidden text-gray-400 sm:block">&bull;</span>
            <span class="font-normal leading-none text-gray-400 sm:hidden"
              >~</span
            >
            <span>9am - 9pm</span>
          </div>
          <button
            class="mt-4 bg-epoch-light px-8 py-2.5 text-xl font-semibold text-black"
            >Register</button
          >
        </div>
        <div class="absolute bottom-4 left-6 text-gray-400">
          Epoch BA is a hackathon organized by the attendees. Join us in the
          <a
            class="underline duration-300 hover:text-gray-100 hover:duration-150"
            >#epoch-ba</a
          > channel in the <a
            class="underline duration-300 hover:text-gray-100 hover:duration-150"
          >
            Hack Club Slack</a
          >.
        </div>
      </div>
    </div>
  </body>
</html>
